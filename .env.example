# Meeting Summarizer - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (Choose one)
# For PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meeting_summarizer
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# For SQLite (Development only)
# DATABASE_URL=sqlite:./database.sqlite

# AI Service Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_PRIMARY=llama-3.3-70b-versatile
GROQ_MODEL_FALLBACK=llama-3.1-8b-instant
GROQ_MODEL_RESEARCH=llama-3.3-70b-versatile

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM_NAME=Meeting Summarizer
EMAIL_FROM_ADDRESS=your_email@gmail.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=.txt,.md,.doc,.docx,.pdf,.rtf
UPLOAD_DIR=uploads

# Cloud Storage (for production)
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Or Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Security Configuration
SESSION_SECRET=your_very_long_random_session_secret_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production URLs (update for deployment)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Health Check
HEALTH_CHECK_ENABLED=true

# Feature Flags
ENABLE_EMAIL=true
ENABLE_FILE_UPLOAD=true
ENABLE_AI_PROCESSING=true
ENABLE_ANALYTICS=true
