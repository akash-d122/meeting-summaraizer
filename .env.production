# Production Environment Variables for Railway Deployment
# These should be set in Railway's environment variables section

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Railway PostgreSQL)
# Railway will provide DATABASE_URL automatically when you add PostgreSQL service
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_SSL=true

# AI Service Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_PRIMARY=llama-3.3-70b-versatile
GROQ_MODEL_FALLBACK=llama-3.1-8b-instant
GROQ_MODEL_RESEARCH=llama-3.3-70b-versatile

# Email Configuration (Choose one)
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Meeting Summarizer

# OR Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# OR AWS SES
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here
SESSION_SECRET=your_super_secure_session_secret_here

# Application Configuration
APP_NAME=Meeting Summarizer
APP_URL=https://your-app-name.railway.app
FRONTEND_URL=https://your-app-name.railway.app

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,pdf,docx,doc

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
