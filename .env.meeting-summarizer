# Meeting Summarizer Environment Variables
# Copy this file to .env and replace with your actual values

# Application Settings
NODE_ENV=development
PORT=3000

# Groq API Configuration (Primary AI Service)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_PRIMARY=llama-3.3-70b-versatile
GROQ_MODEL_FALLBACK=llama-3.1-8b-instant
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MAX_TOKENS=32768
GROQ_TEMPERATURE=0.1
GROQ_TIMEOUT=30000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/meeting_summarizer
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=meeting_summarizer_dev
DB_NAME_TEST=meeting_summarizer_test
DB_HOST=localhost
DB_PORT=5432
DB_SSL=false

# Email Service Configuration (Choose one)
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_verified_sender@example.com

# AWS SES (Alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=your_verified_sender@example.com

# Mailgun (Alternative)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_EMAIL=your_verified_sender@example.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.md,.doc,.docx

# Security Configuration
SESSION_SECRET=your_random_session_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
